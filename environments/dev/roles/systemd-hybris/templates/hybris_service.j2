[Unit]
Description=Start Hybris

[Service]
Type=simple
User=hybris
Group=hybris
ExecStart={{ installation_folder }}/{{ hybris_dir }}/hybrisserver.sh start
RemainAfterExit=true
ExecStop={{ installation_folder }}/{{ hybris_dir }}/hybrisserver.sh stop
TimeoutStopSec=180
Restart=no

[Install]
WantedBy=multi-user.target